{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "skill.schema.json",
    "title": "Skill",
    "description": "Describes a skill an (N)PC can have",
    "type": "object",
    "allOf": [{ "$ref": "resource.schema.json" }],
    "properties": {
        "abilityScore": {
            "$ref": "reference.schema.json",
            "description": "The ability score used with this skill"
        }
    },
    "required": [ "abilityScore" ]
}