{
    "compilerOptions": {
        "outDir": "lib",
        "declarationDir": "types",
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },

    "include": [ "src/**/*" ],
    "exclude": [ "node_modules", "tests", "interfaces" ]
}
